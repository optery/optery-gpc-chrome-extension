{
  "manifest_version": 3,
  "name": "Optery Global Privacy Control (GPC) Extension",
  "short_name": "Optery GPC Extension",
  "version": "0.0.1",
  "description": "Optery's open-source Global Privacy Control (GPC) Extension empowers you to automatically communicate your privacy preferences to websites using the powerful GPC signal. Designed for simplicity, our extension allows even those without technical expertise to easily navigate and utilize the extension.",
  "icons": {
    "16": "/icons/optery-icon-16.png",
    "32": "/icons/optery-icon-32.png",
    "48": "/icons/optery-icon-48.png"
  },
  "permissions": ["storage", "tabs", "declarativeNetRequest", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["contentScript.js", "injectScript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  }
}
