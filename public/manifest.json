{
  "manifest_version": 3,
  "name": "Optery Global Privacy Control (GPC) Extension",
  "short_name": "Optery Extension",
  "version": "0.0.1",
  "description": "The Optery Global Privacy Control (GPC) Extension sends a GlobalPrivacyControl signal to prevent websites from tracking users.",
  "icons": {
    "16": "/icons/optery-icon-16.png",
    "32": "/icons/optery-icon-32.png",
    "48": "/icons/optery-icon-48.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "injectScript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}